{
    "help": [
        "http://www.w3.org/TR/css-flexbox-1/#flex-grow-property"
    ],
    "matches": "../reference/ref-filled-green-100px-square.xht",
    "assert": "The 'flex-grow' property initial value is '0', the flex item will keep the width when 'flex-grow' set '0'",
    "test_case": {
        "style": {
            "margin_right": "8px",
            "margin_bottom": "8px",
            "display": "block",
            "margin_top": "8px",
            "unicode_bidi": "embed",
            "margin_left": "8px"
        },
        "tag": "BODY",
        "children": [
            {
                "style": {
                    "width": "100px",
                    "background_color": "red",
                    "unicode_bidi": "embed",
                    "display": "flex",
                    "height": "100px"
                },
                "tag": "DIV",
                "children": [
                    {
                        "style": {
                            "flex_grow": "1",
                            "background_color": "green",
                            "display": "block",
                            "width": "20px",
                            "height": "100px",
                            "unicode_bidi": "embed"
                        },
                        "tag": "DIV"
                    },
                    {
                        "style": {
                            "flex_grow": "0",
                            "background_color": "green",
                            "display": "block",
                            "width": "20px",
                            "height": "100px",
                            "unicode_bidi": "embed"
                        },
                        "tag": "DIV"
                    },
                    {
                        "style": {
                            "width": "20px",
                            "unicode_bidi": "embed",
                            "display": "block",
                            "height": "100px"
                        },
                        "tag": "DIV"
                    }
                ]
            },
            {
                "style": {
                    "width": "20px",
                    "background_color": "green",
                    "margin_left": "80px",
                    "display": "block",
                    "margin_top": "-100px",
                    "height": "100px",
                    "unicode_bidi": "embed"
                },
                "tag": "DIV"
            }
        ]
    }
}