{
    "help": [
        "http://www.w3.org/TR/css-flexbox-1/#flex-shrink-property"
    ],
    "matches": "../reference/ref-filled-green-100px-square.xht",
    "assert": "The flex item whose flex-shrink property of set 0 will displayed on the top of all flex items",
    "test_case": {
        "style": {
            "margin_right": "8px",
            "margin_bottom": "8px",
            "display": "block",
            "margin_top": "8px",
            "unicode_bidi": "embed",
            "margin_left": "8px"
        },
        "tag": "BODY",
        "children": [
            {
                "style": {
                    "width": "100px",
                    "background_color": "red",
                    "unicode_bidi": "embed",
                    "display": "flex",
                    "height": "100px"
                },
                "tag": "DIV",
                "children": [
                    {
                        "style": {
                            "background_color": "green",
                            "display": "block",
                            "width": "100px",
                            "flex_shrink": "0",
                            "height": "100px",
                            "unicode_bidi": "embed"
                        },
                        "tag": "DIV"
                    },
                    {
                        "style": {
                            "background_color": "black",
                            "display": "block",
                            "width": "100px",
                            "flex_shrink": "3",
                            "height": "100px",
                            "unicode_bidi": "embed"
                        },
                        "tag": "DIV"
                    },
                    {
                        "style": {
                            "background_color": "blue",
                            "display": "block",
                            "width": "100px",
                            "flex_shrink": "2",
                            "height": "100px",
                            "unicode_bidi": "embed"
                        },
                        "tag": "DIV"
                    },
                    {
                        "style": {
                            "width": "100px",
                            "unicode_bidi": "embed",
                            "display": "block",
                            "height": "100px"
                        },
                        "tag": "DIV"
                    }
                ]
            }
        ]
    }
}