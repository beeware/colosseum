{
    "help": [
        "https://drafts.csswg.org/css-flexbox/#definite-sizes"
    ],
    "matches": "percentage-heights-002-ref.html",
    "assert": "Checks that we correctly size percentage-sized\nchildren of absolute-positioned flex boxes",
    "test_case": {
        "style": {
            "margin_right": "8px",
            "margin_bottom": "8px",
            "display": "block",
            "width": "800px",
            "margin_top": "8px",
            "height": "600px",
            "position": "relative",
            "unicode_bidi": "embed",
            "margin_left": "8px"
        },
        "tag": "BODY",
        "children": [
            {
                "style": {
                    "background_color": "red",
                    "right": "0px",
                    "display": "flex",
                    "top": "0px",
                    "left": "0px",
                    "bottom": "0px",
                    "flex_direction": "column",
                    "position": "absolute",
                    "unicode_bidi": "embed"
                },
                "tag": "DIV",
                "children": [
                    {
                        "style": {
                            "background_color": "green",
                            "unicode_bidi": "embed",
                            "display": "block",
                            "height": "20%"
                        },
                        "tag": "DIV",
                        "children": [
                            {
                                "style": {},
                                "text": "Tests that percentage heights get resolved correctly when the flexbox is"
                            }
                        ]
                    },
                    {
                        "style": {
                            "flex_basis": "100%",
                            "background_color": "blue",
                            "unicode_bidi": "embed",
                            "display": "block"
                        },
                        "tag": "DIV",
                        "children": [
                            {
                                "style": {},
                                "text": "absolutely positioned without an explicit height. You should see no red."
                            }
                        ]
                    }
                ]
            }
        ]
    }
}