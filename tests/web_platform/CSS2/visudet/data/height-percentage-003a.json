{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#the-height-property"
    ],
    "test_case": {
        "tag": "body",
        "style": {
            "display": "block",
            "unicode_bidi": "embed",
            "height": "100%",
            "margin_right": "0px",
            "margin_left": "0px",
            "margin_top": "0px",
            "margin_bottom": "0px"
        },
        "children": [
            {
                "tag": "p",
                "style": {
                    "display": "block",
                    "unicode_bidi": "embed",
                    "height": "100%",
                    "margin_right": "0px",
                    "margin_left": "0px",
                    "background_color": "green",
                    "margin_top": "0px",
                    "color": "white",
                    "margin_bottom": "0px"
                },
                "children": [
                    {
                        "text": "Test passes if the background of this page is green and if there is",
                        "style": {}
                    },
                    {
                        "tag": "strong",
                        "style": {
                            "font_weight": "bolder"
                        },
                        "children": [
                            {
                                "text": "no red and no vertical scrollbar",
                                "style": {}
                            }
                        ]
                    },
                    {
                        "text": ".",
                        "style": {}
                    }
                ]
            }
        ]
    },
    "matches": "height-percentage-003a-ref.xht",
    "assert": "The initial containing block has the dimensions of the viewport. A percentage height on the root element is relative to the initial containing block. A 'height: 100%' of the document root element should use all of the document root element's height."
}
