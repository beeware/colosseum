{
    "test_case": {
        "tag": "body",
        "style": {
            "margin_left": "8px",
            "display": "block",
            "margin_top": "8px",
            "margin_bottom": "8px",
            "unicode_bidi": "embed",
            "margin_right": "8px"
        },
        "children": [
            {
                "tag": "div",
                "style": {
                    "display": "table",
                    "unicode_bidi": "embed"
                },
                "children": [
                    {
                        "tag": "span",
                        "style": {
                            "background_color": "blue",
                            "display": "table-column"
                        }
                    },
                    {
                        "tag": "span",
                        "style": {
                            "display": "table-column"
                        }
                    },
                    {
                        "tag": "div",
                        "style": {
                            "display": "table-row",
                            "unicode_bidi": "embed"
                        },
                        "children": [
                            {
                                "tag": "div",
                                "style": {
                                    "display": "table-cell",
                                    "unicode_bidi": "embed"
                                },
                                "children": [
                                    {
                                        "style": {},
                                        "text": "Filler Text"
                                    }
                                ]
                            },
                            {
                                "tag": "div",
                                "style": {
                                    "display": "table-cell",
                                    "unicode_bidi": "embed"
                                },
                                "children": [
                                    {
                                        "style": {},
                                        "text": "Filler Text"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "matches": "display-012-ref.xht",
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-display",
        "http://www.w3.org/TR/CSS21/visuren.html#display-prop"
    ],
    "assert": "The property 'display' set to 'table-column' behaves in layout as a table column."
}
