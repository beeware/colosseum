{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#propdef-vertical-align",
        "http://www.w3.org/TR/CSS21/visudet.html#leading"
    ],
    "test_case": {
        "tag": "body",
        "children": [
            {
                "tag": "div",
                "children": [
                    {
                        "tag": "span",
                        "children": [
                            {
                                "text": "X",
                                "style": {}
                            }
                        ],
                        "style": {
                            "vertical_align": "0%"
                        }
                    },
                    {
                        "tag": "span",
                        "children": [
                            {
                                "text": "X",
                                "style": {}
                            }
                        ],
                        "style": {
                            "vertical_align": "baseline"
                        }
                    }
                ],
                "style": {
                    "font_variant_caps": "normal",
                    "border_bottom_width": "initial",
                    "font_family": "Ahem",
                    "font_size": "100px",
                    "font_weight": "normal",
                    "border_bottom_style": "solid",
                    "border_bottom_color": "orange",
                    "font_style": "normal",
                    "line_height": "1",
                    "color": "blue",
                    "unicode_bidi": "embed",
                    "height": "100px",
                    "display": "block"
                }
            }
        ],
        "style": {
            "margin_bottom": "8px",
            "margin_left": "8px",
            "unicode_bidi": "embed",
            "margin_top": "8px",
            "margin_right": "8px",
            "display": "block"
        }
    },
    "assert": "The 'vertical-align' property set to '0%' means the same as the 'baseline'.",
    "matches": "vertical-align-baseline-001-ref.xht"
}