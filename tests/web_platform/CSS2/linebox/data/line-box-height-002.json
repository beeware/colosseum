{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#propdef-line-height",
        "http://www.w3.org/TR/CSS21/visudet.html#leading"
    ],
    "test_case": {
        "tag": "body",
        "children": [
            {
                "tag": "div",
                "children": [
                    {
                        "tag": "img",
                        "style": {
                            "line_height": "2in",
                            "display": "inline"
                        }
                    },
                    {
                        "tag": "div",
                        "style": {
                            "background_position_x": "initial",
                            "width": "96px",
                            "position": "absolute",
                            "background_origin": "initial",
                            "left": "1in",
                            "background_clip": "initial",
                            "background_color": "orange",
                            "background_image": "initial",
                            "background_repeat_x": "initial",
                            "background_attachment": "initial",
                            "background_size": "initial",
                            "unicode_bidi": "embed",
                            "top": "0px",
                            "height": "96px",
                            "background_repeat_y": "initial",
                            "background_position_y": "initial",
                            "display": "block"
                        }
                    }
                ],
                "style": {
                    "position": "relative",
                    "unicode_bidi": "embed",
                    "display": "block"
                }
            }
        ],
        "style": {
            "margin_bottom": "8px",
            "margin_left": "8px",
            "unicode_bidi": "embed",
            "margin_top": "8px",
            "margin_right": "8px",
            "display": "block"
        }
    },
    "assert": "The 'line-height' property doe not set the height for inline replaced elements. The height of the replaced element sets the line-height'.",
    "matches": "line-box-height-002-ref.xht"
}