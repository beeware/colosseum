{
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#inline-formatting"
    ],
    "test_case": {
        "tag": "body",
        "children": [
            {
                "tag": "div",
                "children": [
                    {
                        "tag": "span",
                        "style": {
                            "display": "inline"
                        }
                    }
                ],
                "style": {
                    "background_position_x": "initial",
                    "background_origin": "initial",
                    "background_clip": "initial",
                    "background_color": "red",
                    "background_image": "initial",
                    "background_repeat_x": "initial",
                    "background_attachment": "initial",
                    "background_size": "initial",
                    "unicode_bidi": "embed",
                    "background_repeat_y": "initial",
                    "background_position_y": "initial",
                    "display": "block"
                }
            }
        ],
        "style": {
            "margin_bottom": "8px",
            "margin_left": "8px",
            "unicode_bidi": "embed",
            "margin_top": "8px",
            "margin_right": "8px",
            "display": "block"
        }
    },
    "assert": "Empty inline elements create a zero-height line box.",
    "matches": "../reference/ref-if-there-is-no-red.xht"
}
